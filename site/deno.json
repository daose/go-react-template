{
  "tasks": {
    "dev": "deno run --allow-env=\"NODE_ENV,ESBUILD_*\" -W --watch main.ts"
  },
  "_nodeModulesDir": "For esbuild to work, need node_modules to be present",
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "npm:@types/react@^19.0.2",
    "lib": ["dom", "deno.ns"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "esbuild": "npm:esbuild@^0.24.2",
    "react": "npm:react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0"
  }
}
